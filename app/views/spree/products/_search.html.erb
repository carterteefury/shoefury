<div id="search">
  <%= link_to "Search", "javascript:void(0)", :id => "search-link", :class => "icon-link" %>
  <%= form_tag products_path, :method => :get do %>
     <%= search_field_tag :keywords, params[:keywords], :placeholder => t(:search), id: "search-field" %>
     <% params.except(:controller,:action,:keywords,:utf8).each do |param, val| %>
       <%= hidden_field_tag param, val %>
     <% end %>
  <% end %>
</div>
